            <AnchorPane>

               <!-- Chat display -->
               <JFXTextArea fx:id="chatArea" editable="false" focusColor="#00e5ff" layoutX="10.0" layoutY="50.0" prefHeight="200.0" prefWidth="260.0" promptText="ðŸ’¬ Awaiting your command..." styleClass="chat-area" unFocusColor="#999999" style="-fx-text-fill: white;"/>

